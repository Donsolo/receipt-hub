generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BusinessProfile {
  id             String   @id @default(cuid())
  businessName   String
  businessAddress String?
  businessPhone  String?
  businessEmail  String?
  logoPath       String?
  updatedAt      DateTime @updatedAt
}

model Receipt {
  id            String      @id @default(cuid())
  receiptNumber String      @unique
  date          DateTime
  clientName    String?
  notes         String?
  taxType       String      @default("none") // "none" | "percent" | "flat"
  taxValue      Decimal?
  subtotal      Decimal
  total         Decimal
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  items         ReceiptItem[]
}

model ReceiptItem {
  id          String   @id @default(cuid())
  receiptId   String
  description String
  quantity    Int
  unitPrice   Decimal
  lineTotal   Decimal
  receipt     Receipt  @relation(fields: [receiptId], references: [id], onDelete: Cascade)
}
